# -*- coding: utf-8 -*-
#
# .XCompose
#
# $Id: .XCompose,v 1.31 2008/09/18 17:57:14 deskpot Exp $

include /usr/share/X11/locale/en_US.UTF-8/Compose
#
# Подробности читейте на http://archlinux.org.ru/node/130 или стучитесь в джаббере muu@jabber.ru
#
#
# Диакритика эсперанто:
#
<Multi_key> <C>			: "Ĉ"	U0108	#
<Multi_key> <c>			: "ĉ"	U0109	#
<Multi_key> <G>			: "Ĝ"	U011C	#
<Multi_key> <g>			: "ĝ"	U011D	#
<Multi_key> <H>			: "Ĥ"	U0124	#
<Multi_key> <h>			: "ĥ"	U0125	#
<Multi_key> <J>			: "Ĵ"	U0134	#
<Multi_key> <j>			: "ĵ"	U0135	#
<Multi_key> <S>			: "Ŝ"	U015C	#
<Multi_key> <s>			: "ŝ"	U015D	#
<Multi_key> <U>			: "Ŭ"	U016C	#
<Multi_key> <u>			: "ŭ"	U016D	#
#
# Ударение (спасибо i-stanislav.blogpost.com):
#
<Multi_key> <apostrophe>	: "́" U0301 # ударение
<Multi_key> <Cyrillic_e>	: "́" U0301 # ударение
<Multi_key> <minus>		: "̶" U0336 # зачеркивание
<Multi_key> <underscore>	: "̲" U0332 # подчеркивание
#
# Валюты:
#
<Multi_key> <Cyrillic_u>        : "€"   EuroSign     # EURO SIGN
<Multi_key> <e>                 : "€"   EuroSign     # EURO SIGN
<Multi_key> <Cyrillic_a>        : "£"   sterling     # POUND SIGN
<Multi_key> <f>                 : "£"   sterling     # POUND SIGN
<Multi_key> <space> <Cyrillic_ie>       : "₮"	U20ae	     # TUGRIK SIGN   
<Multi_key> <space> <t>                 : "₮"   U20ae	     # TUGRIK SIGN
#
# Стрелки:
#
<Multi_key> <greater>		: "↑"   U2191        # UPWARDS ARROW
<Multi_key> <less>              : "↓"   U2193        # DOWNWARDS ARROW
<Multi_key> <comma>	        : "←"   U2190        # LEFTWARDS ARROW
<Multi_key> <period> 		: "→"   U2192        # RIGHTWARDS ARROW
<Multi_key> <slash>     	: "↔"   U2194        # LEFT RIGHT ARROW
<Multi_key> <question>    	: "↕"   U2195        # UP DOWN ARROW
#
# Торговые марки:
#
<Multi_key> <2>	                : "©"   copyright    # COPYRIGHT SIGN
<Multi_key> <Cyrillic_ka>       : "®"   registered   # REGISTERED SIGN
<Multi_key> <r>                 : "®"   registered   # REGISTERED SIGN
<Multi_key> <Cyrillic_softsign> : "™"   U2122        # TRADE MARK SIGN
<Multi_key> <m>                 : "™"   U2122        # TRADE MARK SIGN
#
# Математика:
#
<Multi_key> <equal>       	: "≈"   approximate  # ALMOST EQUAL TO
<Multi_key> <n> <equal>         : "≠"   U2260        # NOT EQUAL TO
<Multi_key> <plus>              : "±"   plusminus    # PLUS-MINUS SIGN
#
# Разное:
#
<Multi_key> <Cyrillic_shcha>    : "°"   degree       # DEGREE SIGN
<Multi_key> <o>                 : "°"   degree       # DEGREE SIGN
<Multi_key> <space>             : " "   nobreakspace # NO-BREAK SPACE
<Multi_key> <Cyrillic_ve>       : "…"   ellipsis     # HORIZONTAL ELLIPSIS
<Multi_key> <d>                 : "…"   ellipsis     # HORIZONTAL ELLIPSIS

# Русская дореформеннаф орфография для мицголизмов:
#
<Multi_key> <Cyrillic_i>    		: "i"   U1110 # строчная "и десятеричное"
<Multi_key> <Cyrillic_I>    	: "I"   U1030 # прописаня "и десятеричное"
<Multi_key> <Cyrillic_ie>       	: "ѣ"   U1123 # строчная "ять"
<Multi_key> <Cyrillic_IE>      : "Ѣ"   U1122 # прописная "ять"
<Multi_key> <Cyrillic_ef>    		: "ө"   U04E8 # "фита" ("крил. O c гор. чертой", реальная кир. фита - U0472) 
<Multi_key> <Cyrillic_EF>      : "Ө"   U04E9 # заглавная фита (реальная кир. фита - U0473)
<Multi_key> <Cyrillic_em>    		: "ѵ"   U1141 # "ижица" 
<Multi_key> <Cyrillic_EM>     : "Ѵ"   U1140 # прописная "ижица"

# Отсутствующие в русской раскладке:
#
<Multi_key> <3>                 : "#"   numbersign   	# NUMBER SIGN
<Multi_key> <4>                 : "$"   dollar       	# DOLLAR SIGN
<Multi_key> <Cyrillic_ha>       : "["   bracketleft  	# LEFT SQUARE BRACKET
<Multi_key> <Cyrillic_hardsign> : "]"   bracketright 	# RIGHT SQUARE BRACKET
<Multi_key> <Cyrillic_HA> 	: "{"   braceleft 	# LEFT CURLY BRACKET
<Multi_key> <Cyrillic_HARDSIGN> : "}"   braceright 	# RIGHT CURLY BRACKET
